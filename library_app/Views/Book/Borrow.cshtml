@model Book
@{
    ViewData["Title"] = "Borrow a Book";
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Borrow Book</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        @Html.Hidden("id",ViewData["Id"])
        <div class="mb-3">
            <label class="form-label">Borrowers Name</label>
            <input type="text" class="form-control" id="borrowerName" asp-for="BorrowerName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Return Date</label>
            <input type="date" class="form-control" id="returnDate" asp-for="ReturnDate" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>